pipeline {
 agent any
  stages {
    
    stage("build") {
      steps {
        echo "Building the application ..."
        echo "Application built ..."
      }
    }
    stage("test") {
      steps {
        echo "Testing the application ..."
        echo "Test done with success ..."
      }
    }
    
    stage("deploy") {
      steps {
        echo "Deploying the application ..."
        echo "deployed"
      }
    }
  }
}
